<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hotel Settings -->
    <data>
        <!-- Inherit Company view to add 'door_code' in Reservation Form -->
        <record id="fastcheckin_hide_pay_reservation_form" model="ir.ui.view">
            <field name="name">fastcheckin_hide_pay.folio_form</field>
            <field name="model">hotel.folio</field>
            <field name="inherit_id" ref="hotel.hotel_folio_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='invoicing']" position="after">
                    <page string="Others">
                        <group>
                            <field name="hide_pay"/>
                            <field name="fc_mail_sended" readonly="1"/>
                            <field name="fc_visits" readonly="1"/>
                            <field name="fc_counts" readonly="1"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <act_window
        id="action_fastcheckin_lists"
        name="Action fastcheckin list"
        res_model="hotel.folio"
        view_mode="tree" />

        <menuitem
        id="menu_hotel_fastcheckin_lists"
        name="Fast Checkins"
        parent="hotel.hotel_reports_menu"
        sequence="35"
        action="action_fastcheckin_lists" />

        <record id="fastcheckin_lists" model="ir.ui.view">
            <field name="name">fastcheckin_lists</field>
            <field name="model">hotel.folio</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="fc_mail_sended"/>
                    <field name="fc_visits"/>
                    <field name="fc_counts"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>
